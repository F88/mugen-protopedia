{
  "include": ["public/icons/**/*.png"],
  "exclude": ["public/icons/**/*-maskable.png"],
  "thresholds": {
    "brightness": {
      "mean": {
        "min": 0.1,
        "max": 0.9
      },
      "min": 0.0,
      "max": 1.0
    },
    "contrast": {
      "minVariance": 0.005,
      "minStdDev": 0.05
    },
    "alpha": {
      "maxMeanTransparency": 0.5,
      "allowFullyTransparent": false
    },
    "dimensions": {
      "pattern": "icon-(\\d+)x(\\d+)"
    }
  },
  "severity": "error"
}
